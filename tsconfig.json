{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": false,
    "outDir": "./dist",        // Compiled files will go here
    "rootDir": "./src",         // Specify the root folder for your source code
    "resolveJsonModule": true,  // If you import JSON files
    "allowSyntheticDefaultImports": true  // Allows synthetic imports, useful for Node.js
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]  // Exclude these directories from compilation
}
